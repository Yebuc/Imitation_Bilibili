<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.imooc.bilibili.dao.UserDao">
    <insert id="addUser" parameterType="com.imooc.bilibili.domain.User" useGeneratedKeys="true" keyProperty="id">
        insert into
                t_user(
                      phone,
                      email,
                      password,
                      salt,
                      createTime
        )values (
                      #{phone},
                      #{email},
                      #{password},
                      #{salt},
                      #{createTime}
        )
    </insert>
    <insert id="addUserInfo" parameterType="com.imooc.bilibili.domain.UserInfo">
        insert into
            t_user_info(
            userId,
            nick,
            avatar,
            sign,
            gender,
            birth,
            createTime
        )values (
                    #{userId},
                    #{nick},
                    #{avatar},
                    #{sign},
                    #{gender},
                    #{birth},
                    #{createTime}
                )
    </insert>

